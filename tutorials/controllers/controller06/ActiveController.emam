package controller06;

component ActiveController {
	port                                    
		in Q xPosition,
		out B active,
		out B status;

	implementation Math{                    

    	if (xPosition > -50)
            active = 1;
        else
            active = 0; 
        end
        
        if (xPosition > 50)
            status = 1;
        else
            status = 0;
        end
	}
}
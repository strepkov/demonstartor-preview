{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Jasmine-ts Tests",
            "program": "${workspaceFolder}/node_modules/jasmine-ts/lib/index.js",
            "args": [
              "simulator-ts/test/*.spec.ts",
            ],
            "cwd": "${workspaceRoot}",
            "internalConsoleOptions": "openOnSessionStart",
            "console": "integratedTerminal",
            "outputCapture":"std",
            "protocol": "inspector",
            "sourceMaps": true
        }
    ]
}